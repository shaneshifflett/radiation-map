#irradiated::glow-inner{
  line-color:#B2DFEE;
  line-width:10;
  line-join:round;
  line-opacity:0.4;
}
#irradiated::glow-innermiddle {
  line-color:#B2DFEE;
  line-width:5;
  line-join:round;
  line-opacity:0.2;
}
#irradiated::glow-outermiddle {
  line-color:#B2DFEE;
  line-width:5;
  line-join:round;
  line-opacity:0.1;
}
#irradiated::glow-outer {
  line-color:#B2DFEE;
  line-width:2.5;
  line-join:round;
  line-opacity:0.05;
}

#irradiated {
  line-color:#B2DFEE;
  line-width:.5;
  polygon-opacity:0;
  polygon-fill:#9F6;
  polygon-gamma:0.75;
}
